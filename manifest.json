{
  "manifest_version": 2,
  "name": "CWA regional ladar",
  "version": "1.0",
  "description": "Demo extension built with Bun + TypeScript",
  "icons": {
    "64": "static/icons/weather.png",
    "48": "static/icons/border-48.png",
    "32": "static/icons/Gear-icon.png"
  },

  "browser_action": {
    "default_popup": "static/popup.html",
    "default_icon": "static/icons/weather.png",
    "default_title": "降雨雷達回波圖"
  },

  "options_ui": {
    "page": "static/option.html",
    "chrome_style": true,
    "browser_style": true
  },

  "permissions": [
    "alarms",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://opendata.cwa.gov.tw/*",
    "http://localhost:3005/*",
    "http://cwa-radar.zeabur.app/*"
  ],

  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  }
}
